{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0",
    "title": "Author's Haven",
    "description": "Authors Haven - A Social platform for the creative at heart."
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1"
    },
    {
      "url": "https://persephone-backend.herokuapp.com/api/v1"
    }
  ],
  "tags": [
    {
      "name": "Sign up",
      "description": "create new user"
    },
    {
      "name": "Login",
      "description": "Endpoint to test the server setup"
    },
    {
      "name": "Forgot Password",
      "description": "Endpoint to get password reset email instruction"
    },
    {
      "name": "Password reset",
      "description": "Endpoint to request for password reset"
    }
  ],
  "paths": {
    "/users/login": {
      "post": {
        "tags": ["Login"],
        "summary": "POST API endpoint for user login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User logged in successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticationInfo"
                }
              }
            }
          },
          "400": {
            "description": "Indicate error in input",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/badRequestResponse"
                }
              }
            }
          }
        }
      }
    },
    "/users/signup": {
      "post": {
        "tags": ["Sign up"],
        "summary": "POST API endpoint for signing up new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "firstName": {
                    "type": "string"
                  },
                  "lastName": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "New user created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticationInfo"
                }
              }
            }
          },
          "400": {
            "description": "Error in input",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/badRequestResponse"
                }
              }
            }
          }
        }
      }
    },
    "/users/forgot_password": {
      "post": {
        "tags": ["Forgot Password"],
        "summary": "Post user email for password reset instructions",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "existingUser@mail.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "New user created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string",
                          "example": "kindly check your mail for password reset instructions"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User email does not exist",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "error": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string",
                          "example": "email does not exist"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/password_reset": {
      "post": {
        "tags": ["Password reset"],
        "summary": "Post user email for password reset instructions",
        "parameters": [
          {
            "name": "token",
            "in": "query",
            "description": "token sent to user email address",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string",
                    "format": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "New user created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string",
                          "example": "password reset was successful"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error in input",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/badRequestResponse"
                }
              }
            }
          },
          "401": {
            "description": "Error in input",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/badAuthenticationError"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    },
    "schemas": {
      "AuthenticationInfo": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "token": {
            "type": "string"
          }
        }
      },
      "badRequestResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "error"
          },
          "errors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "msg": {
                  "type": "string",
                  "example": "please enter your firstName"
                },
                "params": {
                  "type": "string",
                  "example": "firstName"
                },
                "location": {
                  "type": "string",
                  "example": "body"
                }
              }
            }
          }
        }
      },
      "badAuthenticationError": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "error"
          },
          "error": {
            "type": "object",
            "items": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Authentication invalid"
                },
                "body": {
                  "type": "string",
                  "example": "Invalid or expired Token"
                }
              }
            }
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": 1
          },
          "firstName": {
            "type": "string",
            "example": "persephone"
          },
          "lastName": {
            "type": "string",
            "example": "team"
          },
          "email": {
            "type": "string",
            "example": "persephone@andela.com"
          },
          "password": {
            "type": "string"
          }
        }
      }
    }
  }
}
